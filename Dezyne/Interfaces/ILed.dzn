interface ILed {
	extern Pin $int$;
	
	enum State {On, Off};
	in void initialise(Pin pin);
	in void turnOn();
	in void turnOff();
	
	behaviour {
		State state = State.Off;
		on initialise: {state = State.Off;}
		on turnOn: {state = State.On;}
		on turnOff: {state = State.Off;}
	}
}

component Led
{
	provides ILed led;
}